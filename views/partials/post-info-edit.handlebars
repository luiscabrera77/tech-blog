<div class="card">
  <div class="card-body">
    <h5 class="card-title"><a href="/post/{{id}}">{{title}}</a></h5>
    <h6 class="card-subtitle mb-2 text-muted">{{format_date created_at}}</h6>
    <p class="card-text">{{format_short post_body}}</p>
    <div class="container" style="--bs-gutter-x:0">
      <div class="row">
        <div class="col">
          <a href="/post/{{id}}" class="card-link">{{comments.length}} {{format_plural "comment" comments.length}}</a>
        </div>
        <div class="col text-end">
          <a href="/dashboard/edit/{{id}}" class="btn btn-primary">Edit post</a>
        </div>
      </div> 
    </div>  
  </div>
</div>