<div class="container-fluid mt-3">

  <div class="card" id="loginForm">
    <h3 class="card-header"><strong>Welcome Back!</strong></h3>
    <div class="card-body">
      <form class="login-form">
        <h5>Username:</h5>
        <input class="form-control" id="username-login" name="username-login" rows="1" aria-label="Username" />
        <h5 class="mt-3">Password:</h5>
        <input class="form-control" type="password" id="password-login" name="password-login" rows="1"
          aria-label="Password" />
        <button type="submit" class="btn btn-primary mt-3">Login</button>
      </form>
    </div>
  </div>

  <div class="card" id="signupForm">
    <h3 class="card-header"><strong>Welcome to the Team!</strong></h3>
    <div class="card-body">
      <form class="signup-form">
        <h5>Create a Username:</h5>
        <input class="form-control" id="username-signup" name="username-signup" rows="1" aria-label="Username" />
        <h5 class="mt-3">Create a Password:</h5>
        <input class="form-control" type="password" id="password-signup" name="password-signup" rows="1"
          aria-label="Password" />
        <button type="submit" class="btn btn-success mt-3">Sign Up</button>
      </form>
    </div>
  </div>

  <div class="container mt-3" id="createBtn">
    <div class="row">
      <div class="col text-end">
        <a class="btn btn-success" href="#" role="button">Create an Account</a>
      </div>
    </div>
  </div>

  <div class="container mt-3" id="loginBtn">
    <div class="row">
      <div class="col text-end">
        <a class="btn btn-secondary" href="#" role="button">Back to Login</a>
      </div>
    </div>
  </div>

</div>

<script>
  var btnActive = document.getElementById("loginNav");
  btnActive.className += " active";
</script>

<script src="/javascript/login.js"></script>