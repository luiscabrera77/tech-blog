<div class="container-fluid mt-3">
    <div class="row">
      <div class="col">
        <h3>Your Posts</h3>
      </div>
      <div class="col text-end">
        <a href="/dashboard/new/" class="btn btn-success">New Post</a>
      </div>
    </div>
    {{#if posts.length}}
    <div class="row">
      {{#each posts as |post|}}
      <div class="col-4 mt-3 mb-2">
        {{> post-info-edit post }}
      </div>
      {{/each}}
    </div>
  {{else}}
  <div class="row mt-3">
    <div class="col text-center">
      <h5 class="text-info">You haven't written any posts yet!</h5>
      <div class="text-center">
        <img src="https://media.giphy.com/media/ZRLkV447Inaj2bJQmP/giphy.gif" class="rounded" alt="Do it now!">
      </div>
    </div>
  </div>
  {{/if}}
</div>
  <script>
    var btnActive = document.getElementById("dashboardNav");
    btnActive.className += " active";
  </script>